{
  "name": "one_batch_test",
  "n_gpu": 1,
  "sr": 22050,
  "preprocessing": {
    "sr": 22050,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "arch": {
    "type": "HiFiGAN",
    "args": {
      "relu_leakage": 0.1,

      "generator_channels": 128,
      "generator_strides": [8, 8, 2, 2],
      "generator_kernel_sizes": [16, 16, 4, 4],

      "resblock_kernel_sizes": [3, 7, 11],
      "resblock_dilation_sizes": [[1, 3, 5], [1, 3, 5], [1, 3, 5]],

      "n_msd_blocks": 3,
      "msd_channels": [1, 128, 128, 256, 512, 1024, 1024, 1024, 1],
      "msd_kernel_sizes": [15, 41, 41, 41, 41, 41, 5, 3],
      "msd_strides": [1, 2, 2, 4, 4, 1, 1, 1],
      "msd_groups": [1, 4, 16, 16, 16, 16, 2, 1],

      "mpd_kernel_size": 5,
      "mpd_stride": 3,
      "mpd_periods": [2, 3, 5, 7, 11],
      "mpd_channels": [1, 32, 128, 512, 1024]
    }
  },
  "data": {
    "train": {
      "batch_size": 1,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "part": "train",
            "limit": 10,
            "max_audio_len": 8192
          },
          "module": "src.datasets"
        }
      ]
    },
    "test": {
      "batch_size": 1,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "part": "test",
            "limit": 10,
            "max_audio_len": 8192
          },
          "module": "src.datasets"
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 2e-4,
      "betas": [0.8, 0.99],
      "weight_decay": 0.1
    }
  },
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 1e-3,
      "pct_start": 0.1
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "dla-4-nv",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}